<project name="properties">
  <property environment="env"/>
  
  <!-- Repository URLs -->

  <property name="read-repo-url" value="http://repo.campusops.net:8081/nexus/content/groups/campus-read/" />	
  <property name="repo-id" value="campus-repo" />

  <property name="release-repo-url" value="http://repo.campusops.net:8081/nexus/content/repositories/campus-releases" />   	  
  <property name="snapshot-repo-url" value="http://repo.campusops.net:8081/nexus/content/repositories/campus-snapshots" />       

  <property name="build.module" value="service-inmemorydb"/>
  <property name="build.version" value="1.0.0"/>
  <property name="build.sysclasspath" value="ignore"/>
  

  <property name="src.dir" value="${basedir}/src"/>
  <property name="build.dir" value="${basedir}/build"/>
  <property name="build.bin.dir" value="${build.dir}/bin"/>
  <property name="build.lib.dir" value="${build.dir}/lib"/>
  <property name="build.doc.dir" value="${build.dir}/doc"/>
</project>
